<%= search_form_for @q do |f| %>
	<%= f.label :area, 'エリア' %>
	<%= f.search_field :address_cont %>
	<%= f.label :free_word, 'フリーワード' %>
	<%= f.search_field :name_or_description_cont %>
	<%= f.submit "検索"%>
<% end %>

<%= @rooms.count %>

<%= @rooms.each do |room| %>
  <% if room.image? %>
    <%= image_tag room.image.url %>
  <% else %>
    <%= image_tag 'noimage.png' %>
  <% end %>
	<%= room.name %>
	<%= room.address %>
	<%= room.description %>
	<%= room.price %>
	<%= link_to "詳細はこちら", room %>
<% end %>
