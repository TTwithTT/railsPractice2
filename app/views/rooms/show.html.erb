<div class='wrapper'>
  <div class="room-show">
    <div class="room-show-inner">
      <div class="room-detail">
        <div class="room-image">
        <% if @room.avatar? %>
          <%= image_tag @room.avatar.url %>
        <% else %>
          <%# <%= %> %>
        <% end %>
        </div>
        <div class="room-show-profile">
          <div>
            <h3><%= @room.name %></h3>
            <p><%= @room.address %></p>
          </div>
        </div>
        <p class='room-show-introduction'><%= @room.description %></p>
      </div>

      <div class="room-show-reservation">
        <div class="reservation-flex">
          <p>¥<%= @room.price %>/日</p>
          <%= form_with url: new_room_reservation_path(@room), local: true do |f| %>
            <div class="form-group">
              <%= f.label :fromDate, '開始日' %>
              <%= f.date_field :fromDate, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :toDate, '終了日' %>
              <%= f.date_field :toDate, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :numberOfGuests, '宿泊人数' %>
              <%= f.number_field :numberOfGuests, class: 'form-control' %>
            </div>
            <div>
              <%= f.submit '予約する', class: 'btn btn-primary btn-block text-center' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
