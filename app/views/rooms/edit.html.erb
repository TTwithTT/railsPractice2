<%= form_with model: @room do |f| %>
	<%= f.label :name ,'物件名' %>
	<%= f.text_field :name %>
	<%= f.label :description ,'概要' %>
	<%= f.text_area :description %>
	<%= f.label :price ,'料金' %>
	<%= f.text_area :price %>
	<%= f.label :address ,'住所' %>
	<%= f.text_area :address %>
	<%= f.label :avatar ,'画像' %>
	<%= f.file_field :avatar %>
	<%= f.submit '物件情報を編集する' %>
	<%= link_to '登録物件一覧に戻る', users_rooms_path %>
<% end %>
