<div class="room-detail">
  <div class="room-image">
    <% if @room.image? %>
      <%= image_tag room.image.url %>
    <% else %>
      <%= imgage_tag ('noimage.png') %>
    <% end %>
  </div>
  <div class="room-show-profile">
    <div>
      <h3><%= @room.name %></h3>
      <p><%= @room.address %></p>
    </div>
  </div>
  <p class='room-show-introduction'><%= @room.description %></p>
</div>

<%= form_with @reservation, url: reservations_confirm_path do |f| %>
  <%= f.label :fromDate, '開始日' %>
  <%= f.date_field :fromDate %>
  <%= f.label :toDate, '終了日' %>
  <%= f.date_field :toDate %>
  <%= f.label :numberOfGuests '人数' %>
  <%= f.number_field :numberOfGuests %>
  <%= f.submit '再予約' %>
  <%= link_to 'キャンセル', :reservations %>
<% end %>
